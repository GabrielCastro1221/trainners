<link rel="stylesheet" href="/css/login.css">

<header class="header">
    {{> navbar}}
</header>

<div class="body-register mt-15">
    <div class="form-container">
        <div class="mb-2 header-form">
            <h2 class="mt-3">Actualizar contraseña</h2>
            <div>
                <img src="/assets/img/favicon.png" width="100px" alt="">
            </div>
            <h5>Nacci trainner</h5>
        </div>

        <form action="/api/v1/users/reset-password" method="POST">
            <label for="email">Correo electrónico:</label>
            <input type="email" id="email" name="email" placeholder="Ingresa tu Email" required>
            <label for="token">Código de confirmación:</label>
            <input type="text" id="token" name="token" placeholder="Ingresa el código de confirmación" required>
            <label for="password">Nueva contraseña:</label>
            <input type="password" id="password" name="password" placeholder="Ingresa tu contraseña" required>
            <button type="submit">Actualizar contraseña</button>
        </form>
        {{#if error}}
        <p style="color: red;">{{ error }}</p>
        {{/if}}
    </div>
</div>

<footer>
    {{> footer}}
</footer>