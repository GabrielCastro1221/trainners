<link rel="stylesheet" href="/css/cart.css">

<header class="header">
  {{> navbar}}
</header>

<div class="shopping-container">
  <h1 class="title-center margin-bottom-large">Carrito de Compras</h1>
  <div class="cart-items">
    {{#each productos}}
    <div class="cart-item">
      <div class="item-details">
        <h3 class="item-title">{{this.product.title}}</h3>
        <p class="item-quantity">Cantidad: <span class="text-secondary">{{this.quantity}}</span></p>
        <p class="item-price">Precio: <span class="text-secondary">${{this.product.price}}</span></p>
      </div>
      <button onclick="deleteProdFromUser('{{this.cartId}}', '{{this.product._id}}')"
        class="btn-remove">Eliminar</button>
    </div>
    {{/each}}
  </div>

  <div class="cart-summary">
    <h3 class="total-price">Precio Total: $<span class="text-secondary">{{totalPurchase}}</span></h3>
    <div class="btn-group">
      <a href="/tienda" class="btn btn-continue">Seguir comprando</a>
      <form action="/api/v1/cart/{{cartId}}/purchase" method="POST">
        <button type="submit" class="btn-purchase">Realizar compra</button>
      </form>
    </div>
  </div>
</div>

<footer>
  {{> footer}}
</footer>

<script src="/js/cart.js"></script>