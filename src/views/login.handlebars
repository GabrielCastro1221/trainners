<link rel="stylesheet" href="/css/login.css">

<header class="header">
    {{> navbar}}
</header>

<div class="body-register mt-15">
    <div class="form-container">
        <div class="mb-2 header-form">
            <h2 class="mt-3">Iniciar sesión</h2>
            <div>
                <img src="/assets/img/favicon.png" width="100px" alt="">
            </div>
            <h5>Nacci trainner</h5>
        </div>

        <form id="loginForm">
            <label for="email">Correo electronico:</label>
            <input type="email" id="email" name="email" placeholder="Ingresa tu Email" required>
            <label for="password">Contraseña:</label>
            <input type="password" id="password" name="password" placeholder="Ingresa tu contraseña" required>
            <div class="btns-links">
                <a class="btn-RT a" href="/registro/entrenador">Registrarse como Entrenador</a>
                <a class="btn-RT a" href="/user-register">Registrarse como Usuario</a>
            </div>
            <button type="submit">Iniciar Sesión</button>
            <div class="mt-3">
                <p class="text-center">Olvidaste tu contraseña? <a class="btn-RT a" href="/reset-password">Recuperar</a></p>
            </div>
        </form>
    </div>
</div>

<footer>
    {{> footer}}
</footer>

<script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
<script src="/js/login.js"></script>